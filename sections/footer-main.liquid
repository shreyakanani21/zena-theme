{% if section.settings.footer_style == 'style-2' %}
  <footer class="footer-section  footer-2 ">
    <section class="section-b-space subscribe-section">
      <div class="custom-container container">
        <div class="footer-content-logo">
          <div class="footer-logo">
            <a href="{{ shop.url }}">
              {% if settings.theme == 'theme-1' %}
                <img src="{{ 'logo-1.png' | asset_url }}" class="img-fluid logo-img for-light" alt="logo">
                <img src="{{ 'logo-dark.png' | asset_url }}" class="img-fluid logo-img for-dark" alt="logo">
              {% elsif settings.theme == 'theme-2' %}
                <img src="{{ 'logo-2.png' | asset_url }}" class="img-fluid" alt="logo">
                <img src="{{ 'logo-dark-2.png' | asset_url }}" class="img-fluid logo-img for-dark" alt="logo">
              {% elsif settings.theme == 'theme-3' %}
                <img src="{{ 'logo-3.png' | asset_url }}" class="img-fluid" alt="logo">
                <img src="{{ 'logo-dark-3.png' | asset_url }}" class="img-fluid logo-img for-dark" alt="logo">
              {% elsif settings.theme == 'custom' %}
                <img src="{{ settings.logo | image_url }}" class="img-fluid" alt="logo">
              {% endif %}
            </a>
          </div>
          <h6>{{ section.settings.footer_location }}</h6>
        </div>
        <div class="footer-social-icons">
          <ul>
            {% if section.settings.enable_facebook %}
              <li>
                <a href="{{ section.settings.facebook_url }}" target="_blank"
                  ><i class="fa-brands fa-facebook-f"></i
                ></a>
              </li>
            {% endif %}
            {% if section.settings.enable_instagram %}
              <li>
                <a href="{{ section.settings.instagram_url }}" target="_blank"
                  ><i class="fa-brands fa-instagram"></i
                ></a>
              </li>
            {% endif %}
            {% if section.settings.enable_pinterest %}
              <li>
                <a href="{{ section.settings.pinterest_url }}" target="_blank"
                  ><i class="fa-brands fa-pinterest-p"></i
                ></a>
              </li>
            {% endif %}
            {% if section.settings.enable_youtube %}
              <li>
                <a href="{{ section.settings.youtube_url }}" target="_blank"><i class="fa-brands fa-youtube"></i></a>
              </li>
            {% endif %}
            {% if section.settings.enable_twitter %}
              <li>
                <a href="{{ section.settings.twitter_url }}" target="_blank"><i class="fa-brands fa-x-twitter"></i></a>
              </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </section>
    <section class="section-space">
      <div class="custom-container container">
        <div class="row">
          <!-- Footer Menus -->
          {% for block in section.blocks %}
            <div class="col-lg-2 col-md-4 col-sm-3 col-12">
              <div class="footer-content">
                <div>
                  <div class="footer-title d-md-block">
                    <h4>{{ block.settings.footer_menu.title }}</h4>
                    <ul class="footer-details accordion-hidden">
                      {% for link in block.settings.footer_menu.links %}
                        <li>
                          <a href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
          <div class="col-lg-4 col-md-8 col-12">
            <div class="subscribe">
              <div class="d-flex flex-column">
                <div class="">
                  <div>
                    <h5>Subscribe to Our Newsletter!</h5>
                  </div>
                </div>
                <div class="">
                  <div class="subscribe-form">
                    <div class="input-group form-group">
                      <input type="text" class="form-control" placeholder="Enter email address">
                      <div class="btn_group">
                        <span>
                          <i class="fa-solid fa-arrow-right-long"></i>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Sub-Footer Section with Social Media Icons -->
    <div class="sub-footer">
      <div class="custom-container container">
        <div class="row">
          <div class="col-12">
            <div class="footer-end">
              <h6>
                {{ section.settings.footer_note }}
                <span id="current-year"></span>
              </h6>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>
