{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "Footer Width",
      "options": [
        {
          "value": "fluid",
          "label": "Full Width"
        },
        {
          "value": "normal",
          "label": "Standard Width"
        }
      ],
      "default": "normal"
    },
    {
      "type": "select",
      "id": "footer_style",
      "label": "Footer Layout Style",
      "options": [
        {
          "label": "Style-1",
          "value": "style-1"
        },
        {
          "label": "Style-2",
          "value": "style-2"
        },
        {
          "label": "Style-3",
          "value": "style-3"
        }
      ]
    },
    {
      "type": "header",
      "content": "Footer Description"
    },
    {
      "type": "richtext",
      "id": "footer_location",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Footer Information"
    },
    {
      "type": "text",
      "id": "footer_note",
      "label": "Footer Note",
      "default": "2024 Copyright By Themeforest Powered By Pixelstrap"
    },
    {
      "type": "header",
      "content": "Social Media Links",
      "info": "Add social media links that are available for your store."
    },
    {
      "type": "checkbox",
      "id": "enable_facebook",
      "label": "Enable Facebook"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "checkbox",
      "id": "enable_instagram",
      "label": "Enable Instagram"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "checkbox",
      "id": "enable_pinterest",
      "label": "Enable Pinterest"
    },
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    },
    {
      "type": "checkbox",
      "id": "enable_youtube",
      "label": "Enable Youtube"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "Youtube URL"
    },
    {
      "type": "checkbox",
      "id": "enable_twitter",
      "label": "Enable Twitter"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ],
  "blocks": [
    {
      "type": "footer_menu",
      "name": "Menu Block",
      "settings": [
            {
                "type": "header",
                "content": "Footer Menus"
              },
              {
                "type": "link_list",
                "id": "footer_menu",
                "label":"Footer block menu"
              },
      ]
    }
  ]
}
{% endschema %}
