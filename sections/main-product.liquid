                          {% assign questions = shop.metaobjects.product_questions.values %}
                          {% assign counter = 0 %}

                          {% for question in questions %}
                            {% assign metaobject_product_id = question.product.value.id %}

                            {% if metaobject_product_id == product.id %}
                              <li>
                                <div class="question-box">
                                  <p>Q</p>
