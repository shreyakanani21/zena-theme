<section class="{% if section.settings.section_padding == 'top' %}section-t-space{% elsif section.settings.section_padding == 'bottom' %}section-b-space{% elsif section.settings.section_padding == 'both' %}section-space{% endif %}">
  <div class="{% if section.settings.section_width == 'fluid' %}container-fluid{% else %}custom-container container{% endif %}">
    <div class="row">
      <div class="col-12">
        <div class="title-1 content-alignment {{ section.settings.desktop_content_alignment }} mb-4">
          <h3 style="color: {{ section.settings.title_color }}">
            {{ section.settings.title }}
          </h3>
        </div>
      </div>
      <div class="testimonial-slider">
        <div
          class="slick-testimonioal"
          data-slick='{"slidesToShow": {{ section.settings.slide_main }}, "slidesToScroll": 1, "autoplay": {{ section.settings.use_autoplay | json }}, "autoplaySpeed": {{ section.settings.slider_speed }}000, "infinite": {{ section.settings.use_loop | json }}, {% if section.settings.slider_pagination == "dot" %}"dots": true, "arrows": false {% elsif section.settings.slider_pagination == "arrow" %}"arrows": true {% else %} "arrows": false {% endif %}, "responsive": [{"breakpoint":1600,"settings":{"slidesToShow":{{ section.settings.slide_2xl }},"slidesToScroll":1}},{"breakpoint":1200,"settings":{"slidesToShow":{{ section.settings.slide_xl }},"slidesToScroll":1}},{"breakpoint":992,"settings":{"slidesToShow":{{ section.settings.slide_lg }},"slidesToScroll":1}},{"breakpoint":768,"settings":{"slidesToShow":{{ section.settings.slide_md }},"slidesToScroll":1}},{"breakpoint":576,"settings":{"slidesToShow":{{ section.settings.slide_sm }},"slidesToScroll":1}} ]}'
        >
          {% for block in section.blocks %}
            {% if block.type == 'testimonial' %}
              <div class="slick-slide">
                <div class="testimonials-box">
                  <div class="customer-item">
                    <div class="customer-box">
                      <p>
                        {{ block.settings.testimonial_message }}
                      </p>
                    </div>
                  </div>
                  <div class="customer-img">
                    <img
                      class="img-fluid"
                      src="{{ block.settings.customer_image | img_url: 'master' }}"
                      alt=""
                    >
                    <div>
                      <h5 style="color: {{ block.settings.name_color }}">
                        {{ block.settings.customer_name }}
                      </h5>
                      <p style="color: {{ block.settings.description-color }}">
                        {{ block.settings['description-text'] }}
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testomoial Section",
  "settings": [
          {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section Width",
      "options": [
        {
          "value": "fluid",
          "label": "Full Width"
        },
        {
          "value": "normal",
          "label": "Standard Width"
        }
      ]
    },
    {
      "type": "select",
      "id": "section_padding",
      "label": "Section Padding",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "both",
          "label": "Top & Bottom"
        }
      ],
      "default": "top"
    },

    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Section Title"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
    },
     {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [{
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right",
      "label": "Content Alignment"
    },
      {
        "type": "header",
        "content": "Slider Settings( Only For Slider Layout )"
      },
      {
        "type": "checkbox",
        "id": "use_autoplay",
        "label": "Enable Autoplay",
        "info": "Enable To Activate Autoplay For The Slider.",
        "default": false
      },
      {
        "type": "range",
        "id": "slider_speed",
        "min": 1,
        "max": 10,
        "step": 1,
        "label": "Autoplay Speed In Milliseconds",
        "unit": "sec",
        "default": 3
      },
      {
        "type": "checkbox",
        "id": "use_loop",
        "label": "Enable Infinite Loop Sliding",
        "default": false
      },
    {
      "type": "select",
      "id": "slider_pagination",
      "label": "Slider Pagination",
      "options": [
        {
          "label": "Dots",
          "value": "dot"
        },
        {
          "label": "Arrows",
          "value": "arrow"
        },
        {
          "label": "None",
          "value": "none"
        }
      ],
      "default": "none"
    },
    {
        "type": "header",
        "content": "Slider Breakpoints"
      },
      {
        "type": "range",
        "id": "slide_main",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 7,
        "label": "Slides To Show"
      },
      {
        "type": "header",
        "content": "Breakpoint: 1600px"
      },
      {
        "type": "range",
        "id": "slide_2xl",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 6,
        "label": "Slides To Show"
      },
      {
        "type": "header",
        "content": "Breakpoint: 1200px"
      },
      {
        "type": "range",
        "id": "slide_xl",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 6,
        "label": "Slides To Show"
      },
      {
        "type": "header",
        "content": "Breakpoint: 992px"
      },
      {
        "type": "range",
        "id": "slide_lg",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 5,
        "label": "Slides To Show"
      },
      {
        "type": "header",
        "content": "Breakpoint: 768px"
      },
      {
        "type": "range",
        "id": "slide_md",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 4,
        "label": "Slides To Thow"
      },
      {
        "type": "header",
        "content": "Breakpoint: 576px"
      },
      {
        "type": "range",
        "id": "slide_sm",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 3,
        "label": "Slides To Show"
      }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial Block",
      "settings": [
       {
         "type": "header",
         "content": "Testimonial Block Settings"
       },
        {
          "type": "text",
          "id": "testimonial_message",
          "default": "Testimonial Message",
          "label": "Testimonial Review"
        },
       {
         "type": "image_picker",
         "id": "customer_image",
         "label": "Customer Image"
       },
       {
        "type": "text",
        "id": "customer_name",
        "label": "Customer Name",
        "default": "Customer Name"
       },
        {
      "type": "color",
      "id": "name_color",
      "label": "Name Text Color",
    },
       {
         "type": "text",
         "id": "description-text",
         "label": "Description Text",
       },
        {
      "type": "color",
      "id": "description-color",
      "label": "Description Color",
    },
    ]
   },
  ],
  "presets": [
    {
      "name": "Testimonial Section"
    }
  ]
}
{% endschema %}
