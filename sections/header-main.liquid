      {
        "type": "megamenu",
        "name": "Megamenu block",
        "settings": [
          {
            "type": "header",
            "content": "Megamenu Settings"
          },
          {
            "type": "text",
            "id": "menu_label",
            "label": "Menu label"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link Url",
