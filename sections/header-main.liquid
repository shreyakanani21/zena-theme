<header
  class="{% if section.settings.header_style == 'style-1' %}header-style{% elsif section.settings.header_style == 'style-2' %}header-style-2{% elsif section.settings.header_style == 'style-3' %}header-style-3{% endif %} {% if section.settings.header_sticky_type == 'on-scroll' %}header-sticky-on-scroll{% elsif section.settings.header_sticky_type == 'always' %}header-always-sticky{% elsif section.settings.header_sticky_type == 'none' %}header-always-none{% endif %}"
  id="home"
>
  <div class="main-header">
    <div class="{% if section.settings.section_width == 'fluid' %}container-fluid{% else %}custom-container container{% endif %}">
      <div class="row">
        <div class="col-lg-12">
          {% if section.settings.header_style == 'style-1' %}
            {% render 'header-1', section: section %}
          {% elsif section.settings.header_style == 'style-2' %}
            {% render 'header-2', section: section %}
          {% elsif section.settings.header_style == 'style-3' %}
            {% render 'header-3', section: section %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>

{% render 'offcanvas-menu', blocks: section.blocks %}

{% schema %}
{
  "name": "Custom Header",
  "settings": [
      {
        "type": "select",
        "id": "section_width",
        "label": "Header width",
        "options": [
          {
            "value": "fluid",
            "label": "Full Width"
          },
          {
            "value": "normal",
            "label": "Standard Width"
          }
        ],
        "default": "normal"
      },
     {
    "type": "select",
    "id": "logo_position",
    "options": [
      {
        "value": "top-left",
        "label": "Top-left"
      },
      {
        "value": "top-center",
        "label": "Top-center"
      },
      {
        "value": "middle-left",
        "label": "Middle-left"
      },
      {
        "value": "middle-center",
        "label": "Middle-center"
      }
    ],
    "default": "middle-left",
    "label": "Logo position"
  },
  {
    "type": "select",
    "id": "header_style",
    "label": "Header layout style",
    "options": [
      {
        "label": "Header-1",
        "value": "style-1"
      },
      {
        "label": "Header-2",
        "value": "style-2"
      },
      {
        "label": "Header-3",
        "value": "style-3"
      }
    ]
  },
   {
      "type": "select",
      "id": "header_sticky_type",
      "label": "Sticky header",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "on-scroll",
          "label": "On Scroll"
        },
        {
          "value": "always",
