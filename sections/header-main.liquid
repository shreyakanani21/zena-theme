        "name": "Link Block",
        "settings": [
          {
            "type": "header",
            "content": "Menu Block Settings"
          },
          {
            "type": "text",
            "id": "menu_label",
            "label": "Menu label"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link Url",
            "info": "For Link menu type"
          },
          {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        },

        ]
      },
    {
      "type": "menu_block",
      "name": "Menu Block",
      "settings": [
        {
          "type": "header",
          "content": "Menu block settings"
        },
        {
          "type": "text",
          "id": "menu_label",
          "label": "Menu label",
        },

        {
          "type": "url",
          "id": "link",
          "label": "Link url",
        },
         {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        },

          {
          "type": "checkbox",
          "id": "enable_badge",
