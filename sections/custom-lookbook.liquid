<section
  class="{% if section.settings.section_padding == 'top' %}section-t-space{% elsif section.settings.section_padding == 'bottom' %}section-b-space{% elsif section.settings.section_padding == 'both' %}section-space{% endif %} lookbook-section"
  data-aos="fade-up"
  data-aos-duration="500"
>
  <div class="{% if section.settings.section_width == 'fluid' %}container-fluid{% else %}custom-container container{% endif %}">
    <div class="row justify-content-center">
      {% if section.settings['aligment-content'] == 'Right' %}
        <div class="col-xl-7 col-12 lookbook-col p-0">
          <div class="image-1">
            {% if section.settings.image_1 %}
              <img
                class="img-fluid blur-up lazyload"
                {% if settings.enable_lazyload %}
                  data-src="{{ section.settings.image_1 | img_url: 'master' }}"
                {% else %}
                  src="{{ section.settings.image_1 | img_url: 'master' }}"
                {% endif %}
                alt="Banner"
              >
            {% else %}
              <img
                src="{{ 'image.png' | asset_url }}"
                class="img-fluid  "
                alt="Placeholder Image"
              >
            {% endif %}
          </div>
          <div class="image-2">
            {% if section.settings.image_2 %}
              <img
                class="img-fluid blur-up lazyload"
                {% if settings.enable_lazyload %}
                  data-src="{{ section.settings.image_2 | img_url: 'master' }}"
                {% else %}
                  src="{{ section.settings.image_2 | img_url: 'master' }}"
                {% endif %}
                alt="Banner"
              >
            {% else %}
              <img
                src="{{ 'image.png' | asset_url }}"
                class="img-fluid  "
                alt="Placeholder Image"
              >
            {% endif %}
          </div>
          <div class="image-3 d-xxl-block d-xl-none d-block">
            {% if section.settings.image_3 %}
              <img
                class="img-fluid blur-up lazyload"
                {% if settings.enable_lazyload %}
                  data-src="{{ section.settings.image_3 | img_url: 'master' }}"
                {% else %}
                  src="{{ section.settings.image_3 | img_url: 'master' }}"
                {% endif %}
                alt="Banner"
              >
            {% else %}
              <img
                src="{{ 'image.png' | asset_url }}"
                class="img-fluid  "
                alt="Placeholder Image"
              >
            {% endif %}
          </div>
          {% if section.settings.circular == 'image' %}
            <div class="rotating-img {% if section.settings.enable_rotation %}animated{% endif %} d-xl-block d-none">
              {% if section.settings.rotate_img %}
                <img src="{{ section.settings.rotate_img | img_url: 'master' }}" alt="Image 2" class="img-fluid">
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
              <span>
                {% render 'icon-play' %}
              </span>
            </div>
          {% else %}
            <div class="circle">
              {% render 'circular_text_animation' %}
            </div>
          {% endif %}
        </div>
        <div class="col-xl-5 col-12 p-0 lookbook-col lookbook-col-2">
          <div class="banner-content content-alignment {{ section.settings.desktop_content_alignment }}">
            <h2 style="color: {{ section.settings.banner_title_color }};">
              {{ section.settings.banner_title }}
            </h2>
            <p style="color: {{ section.settings.banner_description_color }};">
              {{ section.settings.banner_description }}
            </p>
            <a
              href="{{ section.settings.banner_url }}"
              class="btn btn_solid"
              style="color: {{ section.settings.banner_link_color }}; background-color: {{ section.settings.banner_link_bgcolor }};"
            >
              {{ section.settings.banner_link }}
            </a>
          </div>
          <div class="image-4 d-xl-block d-none">
            {% if section.settings.image_4 %}
              <img
                class="img-fluid blur-up lazyload"
                {% if settings.enable_lazyload %}
                  data-src="{{ section.settings.image_4 | img_url: 'master' }}"
                {% else %}
                  src="{{ section.settings.image_4 | img_url: 'master' }}"
                {% endif %}
                alt="Banner"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>
        </div>
      {% else %}
        <div
          class="col-xl-5 col-12 p-0 lookbook-col lookbook-col-2"
          style="
            display: flex;
            justify-content: end;
          "
        >
          <div class="banner-content content-alignment {{ section.settings.desktop_content_alignment }}">
            <h2 style="color: {{ section.settings.banner_title_color }};">
              {{ section.settings.banner_title }}
            </h2>
            <p style="color: {{ section.settings.banner_description_color }};">
              {{ section.settings.banner_description }}
            </p>
            <a
              href="{{ section.settings.banner_url }}"
              class="btn btn_solid"
              style="color: {{ section.settings.banner_link_color }};  background-color: {{ section.settings.banner_link_bgcolor }};"
            >
              {{ section.settings.banner_link }}
            </a>
          </div>
          <div class="image-4 d-xl-block d-none">
            {% if section.settings.image_4 %}
              <img
                class="img-fluid blur-up lazyload"
                {% if settings.enable_lazyload %}
                  data-src="{{ section.settings.image_4 | img_url: 'master' }}"
                {% else %}
                  src="{{ section.settings.image_4 | img_url: 'master' }}"
                {% endif %}
                alt="Banner"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>
        </div>
        <div class="col-xl-7 col-12 lookbook-col p-0">
          <div class="image-1">
            {% if section.settings.image_1 %}
              <img
                class="img-fluid blur-up lazyload"
                {% if settings.enable_lazyload %}
                  data-src="{{ section.settings.image_1 | img_url: 'master' }}"
                {% else %}
                  src="{{ section.settings.image_1 | img_url: 'master' }}"
                {% endif %}
                alt="Banner"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>
          <div class="image-2">
            {% if section.settings.image_2 %}
              <img
                class="img-fluid blur-up lazyload"
                {% if settings.enable_lazyload %}
                  data-src="{{ section.settings.image_2 | img_url: 'master' }}"
                {% else %}
                  src="{{ section.settings.image_2 | img_url: 'master' }}"
                {% endif %}
                alt="Banner"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
            {% if section.settings.enable_rotate_img %}
              <div class="rotating-img {% if section.settings.enable_rotation %}animated{% endif %} d-xl-block d-none">
                {% if section.settings.rotate_img %}
                  <img src="{{ section.settings.rotate_img | img_url: 'master' }}" alt="Image 2" class="img-fluid">
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
                <span>
                  {% render 'icon-play' %}
                </span>
              </div>
            {% endif %}
          </div>
          <div class="image-3 d-xxl-block d-xl-none d-block">
            {% if section.settings.image_3 %}
              <img
                class="img-fluid blur-up lazyload"
                {% if settings.enable_lazyload %}
                  data-src="{{ section.settings.image_3 | img_url: 'master' }}"
                {% else %}
                  src="{{ section.settings.image_3 | img_url: 'master' }}"
                {% endif %}
                alt="Banner"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  <div class="bg-prop d-xl-block d-none">
    <img src="https://cdn.shopify.com/s/files/1/0714/3728/7637/files/line.png?v=1729079827" alt="Background Line">
  </div>
</section>

{% schema %}
{
  "name": "Lookbook Section",
  "settings": [
    {
    "type": "select",
    "id": "section_width",
    "label": "Section Width",
    "options": [
      {
        "value": "fluid",
        "label": "Full Width"
      },
      {
        "value": "normal",
        "label": "Standard Width"
      }
    ],
    "default": "normal"
  },
        {
      "type": "select",
      "id": "section_padding",
      "label": "Section Padding",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "both",
          "label": "Top & Bottom"
        }
      ],
      "default": "top"
    },
  {
    "type": "text",
    "id": "banner_title",
    "label": "Banner Title",
    "default": "Title"
  },
  {
    "type": "color",
    "id": "banner_title_color",
    "label": "Title Color",
  },
  {
    "type": "text",
    "id": "banner_description",
    "label": "Banner Description",
    "default": "Description..."
  },
  {
    "type": "color",
    "id": "banner_description_color",
    "label": "Description Color",
  },
  {
    "type": "text",
    "id": "banner_link",
    "label": "Banner Button Text",
    "default": "Button"
  },
  {
    "type": "color",
    "id": "banner_link_color",
    "label": "Text Color",
  },
     {
          "type": "color",
          "id": "banner_link_bgcolor",
          "label": "Button Background Color"
        },
  {
    "type": "url",
    "id": "banner_url",
    "label": "Banner Url"
  },
   {
    "type": "image_picker",
    "id": "image_1",
    "label": "Image 1"
  },

  {
    "type": "image_picker",
    "id": "image_2",
    "label": "Image 2"
  },

{
      "type": "select",
      "id": "circular",
      "label": "Rotating Content",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "text",
          "label": "Text"
        }
      ]
    },
  {
    "type": "image_picker",
    "id": "rotate_img",
    "label": "Rotating Image"
  },
    {
    "type": "checkbox",
    "id": "enable_rotation",
    "label": "Enable Rotation"
  },
  {
    "type": "image_picker",
    "id": "image_3",
    "label": "Image 3"
  },

  {
    "type": "image_picker",
    "id": "image_4",
    "label": "Image 4"
  },

     {
  "type": "select",
  "id": "aligment-content",
  "label": "Content Layout",
  "options": [
    {
      "label": "Image Left",
      "value": "Right"
    },
    {
      "label": "Image Right",
      "value": "Left"
    }
  ],
  "default": "Right"
},
      {
      "type": "select",
      "id": "desktop_content_alignment",
      "options": [{
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Content Align"
    },

  ],
  "presets": [
    {
      "name": "Lookbook Section"
    }
  ]
}
{% endschema %}
