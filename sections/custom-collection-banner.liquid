<section
  class="{% if section.settings.section_padding == 'top' %}section-t-space{% elsif section.settings.section_padding == 'bottom' %}section-b-space{% elsif section.settings.section_padding == 'both' %}section-space{% endif %} collection-section"
  data-aos="fade-up"
  data-aos-duration="600"
  data-aos-delay="100"
>
  <div class="{% if section.settings.section_width == 'fluid' %}container-fluid{% else %}custom-container container{% endif %}">
    <div class="row">
      <div class="col-12 title-content content-alignment {{ section.settings.desktop_content_alignment }}">
        <h2 style="color: {{ section.settings.section_title_color }};">
          {{ section.settings.section_title }}
        </h2>
        <p style="color: {{ section.settings.section_description_color }};">
          {{ section.settings.section_description }}
        </p>
      </div>
      <div class="col-12 collection-container" data-aos="fade-up" data-aos-duration="600" data-aos-delay="100">
        <div class="row align-items-xl-center align-items-lg-stretch align-items-center">
          {% if section.settings['aligment-content'] == 'Right' %}
            <div class="col-xl-8 col-lg-7 col-12 banner-div p-md-0 p-auto">
              {% if section.settings.image_1 %}
                <img
                  class="img-fluid blur-up lazyload"
                  {% if settings.enable_lazyload %}
                    data-src="{{ section.settings.image_1 | image_url }}"
                  {% else %}
                    src="{{ section.settings.image_1 | image_url }}"
                  {% endif %}
                  alt="Collection Banner"
                >

              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>
            <div class="col-xl-4 col-lg-5 col-12 banner-content">
              <h3 style="color: {{ section.settings.banner_title_color }};">
                {{ section.settings.banner_title }}
                <span>
                  <i class="fa-solid fa-chevron-right"></i>
                </span>
              </h3>
              <p style="color: {{ section.settings.banner_description_color }};text-align: left;">
                {{ section.settings.banner_description }}
              </p>
              <div class="tag-wrapper">
                {% for block in section.blocks %}
                  {% if block.type == 'tag_block' %}
                    <a>
                      {{ block.settings.tag }}
                    </a>
                  {% endif %}
                {% endfor %}
              </div>
              <div
                class="img-wrapper image-slider"
                data-slick='{"slidesToShow": {{ section.settings.slide_main }}, "slidesToScroll": 1, "autoplay": {{ section.settings.use_autoplay | json }}, "autoplaySpeed": {{ section.settings.slider_speed }}000, "infinite": {{ section.settings.use_loop | json }}, {% if section.settings.slider_pagination == "dot" %}"dots": true, "arrows": false {% elsif section.settings.slider_pagination == "arrow" %}"arrows": true {% else %} "arrows": false {% endif %}, "responsive": [{"breakpoint":1600,"settings":{"slidesToShow":{{ section.settings.slide_2xl }},"slidesToScroll":1}},{"breakpoint":1200,"settings":{"slidesToShow":{{ section.settings.slide_xl }},"slidesToScroll":1}},{"breakpoint":992,"settings":{"slidesToShow":{{ section.settings.slide_lg }},"slidesToScroll":1}},{"breakpoint":768,"settings":{"slidesToShow":{{ section.settings.slide_md }},"slidesToScroll":1}},{"breakpoint":576,"settings":{"slidesToShow":{{ section.settings.slide_sm }},"slidesToScroll":1}} ]}'
              >
                {% for block in section.blocks %}
                  {% if block.type == 'image_block' %}
                    <a href="{{ block.settings.url }}">
                      {% if block.settings.image %}
                        <img
                          class="img-fluid blur-up lazyload"
                          {% if settings.enable_lazyload %}
                            data-src="{{ block.settings.image | img_url: 'master' }}"
                          {% else %}
                            src="{{ block.settings.image | img_url: 'master' }}"
                          {% endif %}
                          alt="Collection Banner"
                        >
                      {% else %}
                        {{ 'image' | placeholder_svg_tag }}
                      {% endif %}
                    </a>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% else %}
            <div class="col-xl-4 col-lg-5 col-12 banner-content pe-4 ps-0">
              <h3 style="color: {{ section.settings.banner_title_color }};">
                {{ section.settings.banner_title }}
                <span>
                  <i class="fa-solid fa-chevron-right"></i>
                </span>
              </h3>
              <p style="color: {{ section.settings.banner_description_color }};text-align: left;">
                {{ section.settings.banner_description }}
              </p>
              <div class="tag-wrapper">
                {% for block in section.blocks %}
                  {% if block.type == 'tag_block' %}
                    <a>
                      {{ block.settings.tag }}
                    </a>
                  {% endif %}
                {% endfor %}
              </div>
              <div class="img-wrapper">
                {% for block in section.blocks %}
                  {% if block.type == 'image_block' %}
                    <a href="{{ block.settings.url }}">
                      {% if block.settings.image %}
                        <img
                          class="img-fluid blur-up lazyload"
                          {% if settings.enable_lazyload %}
                            data-src="{{ block.settings.image | img_url: 'master' }}"
                          {% else %}
                            src="{{ block.settings.image | img_url: 'master' }}"
                          {% endif %}
                          alt="Collection Banner"
                        >
                      {% else %}
                        {{ 'image' | placeholder_svg_tag }}
                      {% endif %}
                    </a>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            <div class="col-xl-8 col-lg-7 col-12 banner-div p-md-0 p-auto">
              {% if section.settings.image_1 %}
                <img
                  class="img-fluid blur-up lazyload"
                  {% if settings.enable_lazyload %}
                    data-src="{{ section.settings.image_1 | image_url }}"
                  {% else %}
                    src="{{ section.settings.image_1 | image_url }}"
                  {% endif %}
                  alt="Collection Banner"
                >

              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

