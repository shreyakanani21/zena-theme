            "label": "Arrows",
            "value": "arrow"
          },
          {
            "label": "None",
            "value": "none"
          }
        ],
        "default": "none"
      },
    {
        "type": "header",
        "content": "Slider Breakpoints"
      },
      {
        "type": "range",
        "id": "slide_main",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 7,
        "label": "Slides To Show"
      },
      {
        "type": "header",
        "content": "Breakpoint: 1600px"
      },
      {
        "type": "range",
        "id": "slide_2xl",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 6,
        "label": "Slides To Show"
      },
      {
        "type": "header",
        "content": "Breakpoint: 1200px"
      },
      {
        "type": "range",
        "id": "slide_xl",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 6,
        "label": "Slides To Show"
      },
      {
        "type": "header",
        "content": "Breakpoint: 992px"
      },
      {
        "type": "range",
        "id": "slide_lg",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 5,
        "label": "Slides To Show"
      },
      {
        "type": "header",
        "content": "Breakpoint: 768px"
      },
      {
        "type": "range",
        "id": "slide_md",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 4,
        "label": "Slides To Show"
      },
      {
        "type": "header",
        "content": "Breakpoint: 576px"
      },
      {
        "type": "range",
        "id": "slide_sm",
        "min": 1,
        "max": 10,
        "step": 1,
        "default": 3,
        "label": "Slides To Show"
      }
    ],
    "blocks": [
        {
            "type": "review_block",
            "name": "Review Block",
            "settings": [
                {
                    "type": "text",
                    "id": "review_description",
                    "label": "Review Description",
                    "default": "Description..."
                },
                {
                    "type": "text",
                    "id": "review_name",
                    "label": "Review Name",
                    "default": "Name"
                },
                {
                    "type": "range",
                    "id": "review_stars",
                    "label": "Number Of Stars",
                    "min": 0,
                    "max": 5,
                    "step": 1,
                    "default": 5
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Customer Reviews"
        }
    ]
}
{% endschema %}

<style>
      /* Style for the Slick dots (pagination) */
    .review-slider .slick-dots {
      bottom: -30px; /* Adjust positioning if needed */
      text-align: center; /* Center the dots */
      padding: 0;
    }

    .review-slider .slick-dots li {
      display: inline-block;
      margin: 0 5px; /* Add spacing between the dots */
    }

   .review-slider .slick-dots li button {
      width: 12px; /* Set the width of the dots */
      height: 12px; /* Set the height of the dots */
      border-radius: 50%; /* Make the dots round */
      background-color:rgba(var(--theme-dark-secondary), 1); /* Default dot color */
      border: none;
      outline: none;
      padding: 0;
      transition: background-color 0.3s ease; /* Smooth transition on hover */
    }

    .review-slider .slick-dots li.slick-active button {
      background-color: rgba(var(--theme-default), 1);
      outline: 1px solid rgba(var(--theme-default), 1);
    outline-offset: 2px;
    }

  .review-slider .slick-dots li.slick-active button:before{
           opacity: 0;
   }
  .review-slider .slick-dots li button:before{
         opacity: 0;
  }
</style>
